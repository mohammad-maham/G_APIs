@model BankAccount

<link href="~/assets/css/elements/avatar.css" rel="stylesheet" type="text/css">


<div class="row layout-top-spacing">
    <div id="custom_styles" class="col-lg-12 layout-spacing col-md-12">
        <div class="statbox widget box box-shadow">
            <div class="widget-header">
                <div class="row">
                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                        <h4>  تکمیل اطلاعات بانکی</h4>
                    </div>
                </div>
            </div>
            <div class="widget-content widget-content-area">
                <p class="h5 font-weight-bold">لطفا بانک مورد نظر را انتخاب کنید.</p>
                <div class="avatar avatar-xl mt-1">
                    <img alt="avatar" src="~/assets/img/90x90.jpg" class="rounded" data-value="1" title="ملی">
                </div>
                <div class="avatar avatar-xl mt-1">
                    <img alt="avatar" src="~/assets/img/90x90.jpg" class="rounded" data-value="2" title="ملت">
                </div>
                <div class="avatar avatar-xl mt-1">
                    <img alt="avatar" src="~/assets/img/90x90.jpg" class="rounded" data-value="3" title="صادرات">
                </div>
                <div class="avatar avatar-xl mt-1">
                    <img alt="avatar" src="~/assets/img/90x90.jpg" class="rounded" data-value="4" title="سپه">
                </div>
                <div class="avatar avatar-xl mt-1">
                    <img alt="avatar" src="~/assets/img/90x90.jpg" class="rounded" data-value="5" title="سامان">
                </div>
            </div>

            <form form class="bankForm" id="prfoleForm" action="javascript:void(0);" novalidate>

                <input id="bankname" name="BankName" type="hidden" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="col-md-8 mb-4">
                            <label for="validationCustom01">شماره حساب</label>
                            <input name="Name" type="text" class="form-control" value="@Model.Hesab" required="">
                            <div class="invalid-feedback">
                                وارد کردن این فیلد الزامیست
                            </div>
                        </div>
                        <div class="col-md-8 mb-4">
                            <label for="validationCustom01">شبا  </label>
                            <input name="Family" type="text" class="form-control" value="@Model.Shaba" required="">
                            <div class="invalid-feedback">
                                وارد کردن این فیلد الزامیست
                            </div>
                        </div>

                    </div>
                </div>
                <div class="field-wrapper clearfix">
                    <button class="btn btn-primary submit-fn col-md-5 float-right" type="submit">  ذخیره      </button>
                </div>

            </form>
        </div>
    </div>
</div>
