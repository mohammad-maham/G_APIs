        var validation = Array.prototype.filter.call(forms, function (form) {
            console.log(form)

            form.addEventListener('submit', function (e) {

                e.preventDefault();
                e.stopPropagation();

                if (form.checkValidity() === false) {
                    invalid.css('display', 'block');

                } else {

                    invalid.css('display', 'none');
                    var formData = $('.loginForm').serialize();

                    $.ajax({
                        url: '/Account/Login',
                        type: 'POST',
                        data: formData,
                        success: function (response) {
                            if (response.result) {

                                window.location.href = '/Home';
                            } else {
                                $('#loginResult').html('رمز عبور یا نام کاربری اشتباه است').removeClass('d-none');
                            }
                        },
                        error: function () {
                            $('#loginResult').html('خطایی رخ داده لطفا دوباره تلاش نمایید.').removeClass('d-none');
                        }
                    });
                }
            }, false);
        });

